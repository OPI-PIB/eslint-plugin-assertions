{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"lib": ["dom", "es2015"],
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src"],
	"exclude": ["**/*.spec.ts"]
}
